 Exercicio 1 
 
#include <stdio.h>

int main()

{

int INDICE = 13, SOMA = 0, K = 0;

   while(K < INDICE){

       K = K + 1;

       SOMA = SOMA + K;

   }

   printf("%d",SOMA);

return 0;
//No fim do processamento desse código o valor da variável SOMA será 91.
}


Exercicio 2
programa{
  
  funcao inicio(){
    inteiro a = 0, b = 1, c = 0, n, contador = 2

    faca{
      escreva("Qual número deseja calcular? ")
      leia(n)
    }enquanto(n < 1)

    se(n == 1){
      escreva("0\n")
    }
    senao{
      se(n == 2){
        escreva("1\n")
      }
      senao{
        enquanto(contador < n){
          c = a + b
          a = b
          b = c
          contador++
          escreva(c, ", ")
        }
        escreva("\nO ", n, "º termo é: ", c, "\n")
      }
    }
  }
}

